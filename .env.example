# Forensic Triage Toolkit - Environment Configuration
# Copy this file to .env and configure your settings

# ========================================
# AWS Configuration
# ========================================
# AWS Access Credentials (can also use AWS CLI profiles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Region for S3 bucket
AWS_DEFAULT_REGION=us-east-1

# S3 bucket name for evidence storage
S3_BUCKET=forensic-evidence

# ========================================
# Acquisition Settings  
# ========================================
# Memory acquisition limit in MB (default: 4096 = 4GB)
MEMORY_LIMIT_MB=4096

# Local evidence directory path (relative or absolute)
EVIDENCE_DIR=./evidence

# ========================================
# Processing Options
# ========================================
# Compress artifacts before upload (true/false)
COMPRESS=false

# Skip S3 upload - offline mode (true/false) 
OFFLINE=false

# Encrypt artifacts before upload (true/false)
ENCRYPT=false

# ========================================
# Advanced Settings
# ========================================
# Velociraptor binary path (defaults to ./bin/velociraptor.exe)
VELOCIRAPTOR_PATH=

# Maximum retry attempts for S3 operations
S3_RETRY_COUNT=3

# Log level (Info, Warning, Error, Verbose, Debug)
LOG_LEVEL=Info

# Enable verbose logging (true/false)
VERBOSE=false

# ========================================
# Chain of Custody Settings  
# ========================================
# Investigator name for manifest
INVESTIGATOR_NAME=

# Case number/identifier
CASE_NUMBER=

# Additional notes for evidence manifest
EVIDENCE_NOTES=

# ========================================
# Optional: Velociraptor Configuration
# ========================================
# Custom Velociraptor config file path
VELOCIRAPTOR_CONFIG=

# Additional Velociraptor arguments
VELOCIRAPTOR_ARGS=

# ========================================
# Optional: Security Settings
# ========================================
# Encryption passphrase (if ENCRYPT=true)
ENCRYPTION_PASSPHRASE=

# S3 server-side encryption (AES256, aws:kms)
S3_ENCRYPTION=

# KMS key ID (if using aws:kms encryption)
KMS_KEY_ID=
